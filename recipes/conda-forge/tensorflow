  number: 0
  skip: True  # [not x86_64]
  skip: True  # [win and vc<14]

requirements:
  build:
    - {{ compiler('c') }}       # [linux]
    - {{ compiler('cxx') }}     # [linux]
    - bazel >=0.19.0,<=0.21.0   # [linux]
    - nasm                      # [linux]
  host:
    # conda build requirements
    - python
    - pip
    - setuptools <=39.1.0
